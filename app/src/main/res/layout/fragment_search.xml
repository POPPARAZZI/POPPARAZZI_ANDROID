<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/motion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:currentState="@id/motion_normal"
    app:layoutDescription="@xml/scene_search">

    <com.spoons.popparazzi.core.ui.widget.TopToolbarLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/toolbar"
        app:toolbar_title="@string/search_popup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/cl_search"
        android:layout_width="0dp"
        android:layout_height="50dp">

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="검색 영역"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/cl_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/cl_category"
        android:layout_width="0dp"
        android:layout_height="50dp">

        <TextView
            android:text="카테고리 영역"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map_search"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:navermap_logoClickEnabled="false"
        app:navermap_zoomControlEnabled="false"
        android:name="com.naver.maps.map.MapFragment"/>

    <TextView
        android:background="@color/color_container"
        android:id="@+id/cl_bottom_bar"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/view_popup"
        app:layout_constraintEnd_toEndOf="@id/view_popup"
        app:layout_constraintBottom_toTopOf="@id/view_popup"
        android:text="애니메이션 영역"
        android:layout_width="0dp"
        android:layout_height="44dp"/>

    <View
        android:background="@color/color_container"
        app:layout_constraintHeight_percent="0.55"
        android:id="@+id/view_popup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#FFEB3B"
        android:id="@+id/cl_popup_list"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#E91E63"
        android:id="@+id/cl_popup_item"
        android:layout_width="0dp"
        android:layout_height="0dp"/>


</androidx.constraintlayout.motion.widget.MotionLayout>