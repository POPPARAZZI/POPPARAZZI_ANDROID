<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_toolbar_height"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:src="@drawable/ic_toolbar_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="@dimen/spacing_default"
        android:paddingEnd="@dimen/spacing_medium"
        android:id="@+id/btn_toolbar_back"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <TextView
        app:layout_goneMarginStart="@dimen/spacing_default"
        android:id="@+id/tv_toolbar_title"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/btn_toolbar_back"
        app:layout_constraintEnd_toStartOf="@id/btn_toolbar_noti"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ImageView
        android:src="@drawable/ic_toolbar_noti"
        app:layout_constraintEnd_toStartOf="@id/btn_toolbar_setting"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="@dimen/spacing_default"
        android:id="@+id/btn_toolbar_noti"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <ImageView
        android:src="@drawable/ic_toolbar_setting"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingEnd="@dimen/spacing_default"
        android:id="@+id/btn_toolbar_setting"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>
    

</androidx.constraintlayout.widget.ConstraintLayout>