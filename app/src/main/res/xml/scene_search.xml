<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/search_mode"
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        motion:duration="200">

        <OnSwipe
            motion:dragDirection="dragDown"
            motion:touchAnchorSide="middle"
            motion:maxAcceleration="100"
            motion:touchRegionId="@id/tv_test"
            motion:onTouchUp="autoComplete"
            motion:autoCompleteMode="continuousVelocity" />
    </Transition>

    <ConstraintSet android:id="@id/start">
        <Constraint
            android:id="@id/map_search"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/cl_category"
            motion:layout_constraintBottom_toTopOf="@id/tv_test"/>

        <Constraint
            android:id="@id/view_popup"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHeight_percent="0.55"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"/>

        <Constraint
            android:id="@id/cl_popup_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="@id/view_popup"
            motion:layout_constraintStart_toStartOf="@id/view_popup"
            motion:layout_constraintEnd_toEndOf="@id/view_popup"
            motion:layout_constraintBottom_toBottomOf="@id/view_popup">
            <PropertySet
                android:visibility="visible"/>
        </Constraint>

        <Constraint
            android:id="@id/cl_popup_item"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="@id/view_popup"
            motion:layout_constraintStart_toStartOf="@id/view_popup"
            motion:layout_constraintEnd_toEndOf="@id/view_popup"
            motion:layout_constraintBottom_toBottomOf="@id/view_popup">
            <PropertySet
                android:visibility="invisible"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@id/end">
        <Constraint
            android:id="@id/map_search"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/cl_category"
            motion:layout_constraintBottom_toBottomOf="parent" />

        <Constraint
            android:id="@id/view_popup"
            android:layout_width="0dp"
            android:layout_height="120dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"/>

        <Constraint
            android:id="@id/cl_popup_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="@id/view_popup"
            motion:layout_constraintStart_toStartOf="@id/view_popup"
            motion:layout_constraintEnd_toEndOf="@id/view_popup"
            motion:layout_constraintBottom_toBottomOf="@id/view_popup">
            <PropertySet
                android:visibility="invisible"/>
        </Constraint>

        <Constraint
            android:id="@id/cl_popup_item"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="@id/view_popup"
            motion:layout_constraintStart_toStartOf="@id/view_popup"
            motion:layout_constraintEnd_toEndOf="@id/view_popup"
            motion:layout_constraintBottom_toBottomOf="@id/view_popup">
            <PropertySet
                android:visibility="visible"/>
        </Constraint>

    </ConstraintSet>

</MotionScene>