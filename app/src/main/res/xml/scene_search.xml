<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:motion="http://schemas.android.com/apk/res-auto">

    <!-- normal <-> hide -->
    <Transition
        android:id="@+id/t_normal_hide"
        motion:constraintSetStart="@id/motion_normal"
        motion:constraintSetEnd="@id/motion_hide"
        motion:duration="200">

        <OnSwipe
            motion:dragDirection="dragDown"
            motion:touchAnchorSide="middle"
            motion:maxAcceleration="100"
            motion:touchRegionId="@id/cl_bottom_bar"
            motion:onTouchUp="autoComplete"
            motion:autoCompleteMode="continuousVelocity" />

    </Transition>

    <!-- normal <-> full -->
    <Transition
        android:id="@+id/t_normal_full"
        motion:constraintSetStart="@id/motion_normal"
        motion:constraintSetEnd="@id/motion_full"
        motion:duration="200">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorSide="middle"
            motion:maxAcceleration="100"
            motion:touchRegionId="@id/cl_bottom_bar"
            motion:onTouchUp="autoComplete"
            motion:autoCompleteMode="continuousVelocity" />

    </Transition>

    <!-- detail <-> hide -->
    <Transition
        android:id="@+id/t_detail_hide"
        motion:constraintSetStart="@id/motion_detail"
        motion:constraintSetEnd="@id/motion_hide"
        motion:duration="200">

        <OnSwipe
            motion:dragDirection="dragDown"
            motion:touchAnchorSide="middle"
            motion:maxAcceleration="100"
            motion:touchRegionId="@id/cl_bottom_bar"
            motion:onTouchUp="autoComplete"
            motion:autoCompleteMode="continuousVelocity" />

    </Transition>

    <!-- detail <-> normal -->
    <Transition
        android:id="@+id/t_normal_detail"
        motion:constraintSetStart="@id/motion_normal"
        motion:constraintSetEnd="@id/motion_detail"
        motion:duration="200">

        <OnSwipe
            motion:dragDirection="dragDown"
            motion:touchAnchorSide="middle"
            motion:maxAcceleration="100"
            motion:touchRegionId="@id/cl_bottom_bar"
            motion:onTouchUp="autoComplete"
            motion:autoCompleteMode="continuousVelocity" />
    </Transition>
